{
  "kind": "collectionType",
  "collectionName": "festivals",
  "info": {
    "singularName": "festival",
    "pluralName": "festivals",
    "displayName": "Festival / Event",
    "description": "District events and seasonal guides"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "start_date": {
      "type": "date"
    },
    "end_date": {
      "type": "date"
    },
    "districts": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::district.district",
      "inversedBy": "events"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "metadata": {
      "type": "json"
    },
    "resources": {
      "type": "component",
      "repeatable": true,
      "component": "common.source-link"
    }
  }
}
